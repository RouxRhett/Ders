<% content_for(:title, '新規登録') %>
<div class='container my-5'>
  <h2 class='ml-5'>新規登録</h2>
  <div></div>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name),local: true do |f| %>
    <%= render 'public/shared/error_messages', resource: resource %>

    <div class='form-group'>
      <div class='col col-form-label'>
        <%= f.label :email %> <span class="badge badge-danger">必須</span><br />
      </div>
      <div class='col'>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col col-form-label'>
        <%= f.label :name %> <span class="badge badge-danger">必須</span><br />
      </div>
      <div class='col'>
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', class:'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :password, class:'col col-form-label' %><br />
      <div class='col'>
        <%= f.password_field :password, autocomplete: 'new-password', class:'form-control' %>
        <% if @minimum_password_length %>
          <small class='form-text text-muted'>(<%= @minimum_password_length %> 文字以上)</small>
        <% end %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation, class:'col col-form-label' %><br />
      <div class='col'>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col'>
        <%= f.submit class:'btn btn-info' %>
      </div>
    </div>
  <% end %>

  <%= render 'public/shared/links' %>
</div>
